<script>
  var elem_splitsec = document.querySelector('.spSlsec-main-carousel');
  var flkty_splitsec = new Flickity( elem_splitsec, {
    // options
    cellAlign: 'left',
    contain: true,
    adaptiveHeight: true,
    pageDots: true,
    accessibility: false
  });
</script>














{% schema %}
{
   "name": "Split Slider second",

  "blocks": [
    {
      "type": "hero_images",
      "name": "Slider Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "spSlsec_image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "spSlsec_title",
          "label": "Title",
          "default": "Make the Most of Morning"
        },
        {
          "type": "text",
          "id": "spSlsec-sub",
          "label": "Subtitle",
          "default": "The quickest, easiest way to get in your fruits and veggies"
        },

       {
        "type": "url",
        "id": "spslsec_btn_url",
        "label": "label",
       "default": "/"
       },

      {
        "type": "text",
        "id": "spSlsec_btn_text",
        "label": "label",
        "default": "Get Started"
      }

      ]
    }
  ],
  
 "presets": [
    {
       
        "name":"split slider second"
    }
 ]
}
{% endschema %}