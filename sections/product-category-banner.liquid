  </div>

  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
  <script>
  var el = document.querySelector('.product-carousel');
  var fl = new Flickity( el, {
    cellAlign: 'left',
    accessibility: false,
    contain: true,
    wrapAround: true,
    freeScroll: true
  });
</script>

  {% schema %}
  {
    "name": "Product Category Banner",
   "settings": [

    {
      "type": "text",
