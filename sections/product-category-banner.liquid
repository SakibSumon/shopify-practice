   {
        "type": "text",
        "id": "catefory_top_left_text",
        "label": "category top left text",
        "default": "Sale!"
   },

    {
        "type": "collection",
        "id": "collection",
        "label": "category top left"
    }, 

    {
          "type": "text",
          "id": "btn_text",
          "label": "Button Text",
          "default": "v More"
    },

     {
          "type": "url",
          "id": "btn_url",
          "label": "Button  Url",
          "default": "/"
     }

   ],

    "presets": [
        {
            "name":"product Category Banner"
        }
    ]
  }
  {% endschema %}