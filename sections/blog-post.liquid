{{ "blog-post.css" | asset_url | stylesheet_tag }}

{% assign mainBlog = blogs[section.settings.blog_item] %}
{% assign Featureblogs = blogs[section.settings.blog_item].articles %}


<section class="bgpst page-width-custom">
  <h1>new Blog Section</h1>
      {% for blog in Featureblogs %}

          <div class="blog-imgArea">
            {% if blog.image %}
                {% render 'image', imageSrc: blog.image, classes: 'blog-img' %}
            {% else %}
                {{ 'image' | placeholder_svg_tag: '' }}
            {% endif %}
          </div>

        <a href="{{ mainBlog.url }}/tagged/{{ blog.tags[0] | handle }}">{{ blog.tags[0] }}</a>
          <h1>{{ blog.title }}</h1>
           <p class="blog-text"> published at: {{ blog.published_at | time_tag: format: 'date' }} </p>
            <h1>{{ blog.tag }}</h1>

          <a href="{{blog.url }}" >click here</a>

             <!-- <h1> author name:{{ blog.author }}</h1> -->
                
       
            {% if blog.excerpt.size > 0 %}
               {{ blog.excerpt }}
            {% else %}
               {{ blog.content | strip_html | truncate: 150 }}
            {% endif %}
      {% endfor %}
</section>



{% schema %}
{
  "name": "Blog Post",
  "settings": [
        {
            "type": "blog",
            "id": "blog_item",
            "label": "blog Item"
        },
        {
            "type": "checkbox",
            "id": "show_date",
            "default": true,
            "label": "t:sections.featured-blog.settings.show_date.label"
       },
        {
            "type": "checkbox",
            "id": "show_author",
            "default": false,
            "label": "t:sections.featured-blog.settings.show_author.label"
        },

        {
            "type": "checkbox",
            "id": "show_image",
            "default": true,
            "label": "t:sections.featured-blog.settings.show_image.label",
            "info": "t:sections.featured-blog.settings.show_image.info"
        }
    ],

"presets": [
    {
      
        "name":"New Blog Posts",
         "settings": {
            "blog_item": "News"
      }
    }
]
}
{% endschema %}